{
  "info": {
    "_postman_id": "a1b2c3d4-e5f6-a1b2-c3d4-e5f6a1b2c3d4",
    "name": "ToquePlay API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. User Management",
      "item": [
        {
          "name": "Register New User (Email/Pass)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"organizer-{{$randomInt}}@test.com\",\n    \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Update User Profiles",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{authToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"profiles\": [\"organization\"]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/users/profiles",
              "host": ["{{baseUrl}}"],
              "path": ["users", "profiles"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Tournament Management (Organizer)",
      "item": [
        {
          "name": "Create Tournament",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.environment.set(\"tournamentId\", pm.response.json().id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{authToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Copa de Verão ToquePlay\",\n    \"description\": \"Torneio de futevôlei para amadores e profissionais\",\n    \"numberOfTeams\": 16,\n    \"teamSize\": 2,\n    \"pricePerPerson\": 50.00,\n    \"date\": \"2025-12-25T14:00:00.000Z\",\n    \"categories\": {\n        \"masculino\": {\n            \"2x2\": true,\n            \"4x4\": false,\n            \"6x6\": false\n        },\n        \"feminino\": {\n            \"2x2\": true,\n            \"4x4\": false,\n            \"6x6\": false\n        },\n        \"misto\": {\n            \"2x2\": false,\n            \"4x4\": false,\n            \"6x6\": false\n        }\n    }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/tournaments",
              "host": ["{{baseUrl}}"],
              "path": ["tournaments"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Athlete Flow",
      "item": [
        {
          "name": "List All Tournaments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tournaments",
              "host": ["{{baseUrl}}"],
              "path": ["tournaments"]
            }
          },
          "response": []
        },
        {
          "name": "Register a Team",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.environment.set(\"teamId\", pm.response.json().teamId);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{authToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"teamName\": \"Os Craques\",\n    \"members\": [\n        {\n            \"fullName\": \"João da Silva\",\n            \"email\": \"joao.silva@test.com\"\n        }\n    ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/tournaments/{{tournamentId}}/register-team",
              "host": ["{{baseUrl}}"],
              "path": ["tournaments", "{{tournamentId}}", "register-team"]
            }
          },
          "response": []
        },
        {
          "name": "Create PIX Payment",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{authToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"tournamentId\": \"{{tournamentId}}\",\n    \"teamId\": \"{{teamId}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/payments/pix",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "pix"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Webhook (Called by MercadoPago)",
      "item": [
        {
          "name": "Handle Webhook",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"type\": \"payment\",\n    \"data\": {\n        \"id\": \"123456789\"\n    }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/payments/webhook",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "webhook"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}
